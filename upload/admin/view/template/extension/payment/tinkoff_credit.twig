{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-mode">{{ entry_mode }}</label>
            <div class="col-sm-10">
              <select name="payment_tinkoff_credit_mode" id="input-mode" class="form-control">
                {% if payment_tinkoff_credit_mode == 'prod' %}
                  <option value="test">{{ mode_test }}</option>
                  <option value="prod" selected="selected">{{ mode_prod }}</option>
                {% else %}
                  <option value="test" selected="selected">{{ mode_test }}</option>
                  <option value="prod">{{ mode_prod }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <input type="hidden" name="payment_tinkoff_credit_action" id="input_action" value="{{ payment_tinkoff_credit_action }}">

          <div class="tinkoff-access form-group{% if payment_tinkoff_credit_mode != 'prod' %} hiden{% endif %}">
            <label class="col-sm-2 control-label" for="input-shopId"><span data-toggle="tooltip" title="{{ help_shopId }}">{{ entry_shopId }}</span></label>
            <div class="col-sm-10">
              {% if payment_tinkoff_credit_shopId == 'test_online' %}
              <input type="text" name="payment_tinkoff_credit_shopId" value="" placeholder="{{ entry_shopId }}" id="input-shopId" class="form-control" />
              {% else %}
              <input type="text" name="payment_tinkoff_credit_shopId" value="{{ payment_tinkoff_credit_shopId }}" placeholder="{{ entry_shopId }}" id="input-shopId" class="form-control" />
              {% endif %}
            </div>
          </div>

          <div class="tinkoff-access form-group{% if payment_tinkoff_credit_mode != 'prod' %} hiden{% endif %}">
            <label class="col-sm-2 control-label" for="input-showcaseId"><span data-toggle="tooltip" title="{{ help_showcaseId }}">{{ entry_showcaseId }}</span></label>
            <div class="col-sm-10">
              {% if payment_tinkoff_credit_shopId == 'test_online' %}
              <input type="text" name="payment_tinkoff_credit_showcaseId" value="" placeholder="{{ entry_showcaseId }}" id="input-showcaseId" class="form-control" />
              {% else %}
              <input type="text" name="payment_tinkoff_credit_showcaseId" value="{{ payment_tinkoff_credit_showcaseId }}" placeholder="{{ entry_showcaseId }}" id="input-showcaseId" class="form-control" />
              {% endif %}
            </div>
          </div>

          <input type="hidden" name="payment_tinkoff_credit_total" value="3000" placeholder="{{ entry_total }}" id="input-total" class="form-control" />


          <div class="form-group promoCode{% if payment_tinkoff_credit_mode != 'prod' %} hiden{% endif %}">
            <div class="col-sm-2 control-label"><p>{{ entry_promoCode }}</p></div>
            <div class="col-sm-10">
              <script>var i = 0;</script>
              <div class="promocode-input-container">
                {% for promoCode in payment_tinkoff_credit_promoCode %}
                <div>
                  <input type='text' class='form-control' name='payment_tinkoff_credit_promoCode[{{ promoCode.counter }}][name]' value='{{ promoCode.name }}' placeholder='Название промокода'>
                  <input type='text' class='form-control' name='payment_tinkoff_credit_promoCode[{{ promoCode.counter }}][code]' value='{{ promoCode.code }}' placeholder='Название промокода'>
                  <input type='hidden' name='payment_tinkoff_credit_promoCode[{{ promoCode.counter }}][counter]' value='{{ promoCode.counter }}'>
                  <button type='button' data-loading='Загрузка...' data-toggle='tooltip' class='delete_promoCode btn btn-danger' data-original-title='Удалить'><i class='fa fa-trash-o'></i></button>
                  <script>i = {{ promoCode.counter }} + 1;</script>
                </div>
                {% endfor %}
              </div>
              <button type="button" id="add_promoCode" class="btn btn-primary" data-original-title="Добавить"><i class="fa fa-plus"></i></button>
            </div>
          </div>
          <script>
            $('#add_promoCode').on('click', function () {
              $('.promocode-input-container')
              .append("<div>" +
                     "<input type='text' class='form-control' name='payment_tinkoff_credit_promoCode["+ i +"][name]' placeholder='Название промокода'>" +
                     "<input type='text' class='form-control' name='payment_tinkoff_credit_promoCode["+ i +"][code]' placeholder='Промокод'>" +
                     "<input type='hidden' name='payment_tinkoff_credit_promoCode["+ i +"][counter]' value='"+ i +"'>" +
                     "<button type='button' data-loading='Загрузка...' data-toggle='tooltip' class='delete_promoCode btn btn-danger' data-original-title='Удалить'><i class='fa fa-trash-o'></i></button>" +
                     "</div>");
              i++;
            });
            $(document).on('click', '.delete_promoCode', function () {
              $(this).parent().remove();
            });
          </script>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_tinkoff_credit_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_tinkoff_credit_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_tinkoff_credit_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_tinkoff_credit_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_tinkoff_credit_status" id="input-status" class="form-control">
                {% if payment_tinkoff_credit_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_tinkoff_credit_sort_order" value="{{ payment_tinkoff_credit_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .form-group.hiden{
    display: none;
  }
  .promoCode.hidden{
    display: none;
  }
  .promoCode .control-label p{
    font-weight: bold;
  }
  .promocode-input-container .form-control{
    width: 44%;
    display: inline-block;
    margin-right: 2%;
    margin-bottom: 15px;
  }
  .promocode-input-container .form-control:last-child{
    margin-right: 0;
  }
</style>
<script>
  $(document).ready(function () {

    if( $('#input-mode').val() == 'test' ){
      $('#input_action').val('https://loans-qa.tcsbank.ru/api/partners/v1/lightweight/create');
    }else{
      $('#input_action').val('https://loans.tinkoff.ru/api/partners/v1/lightweight/create');
    }

  });
  $('#input-mode').on('change', function () {
    if( $(this).val() == 'test' ){
      $('.tinkoff-access').addClass('hiden');
      $('.promoCode').addClass('hiden');
      $('#input_action').val('https://loans-qa.tcsbank.ru/api/partners/v1/lightweight/create');
    }else{
      $('.tinkoff-access').removeClass('hiden');
      $('.promoCode').removeClass('hiden');
      $('#input_action').val('https://loans.tinkoff.ru/api/partners/v1/lightweight/create');
    }
  });
</script>

{{ footer }}
